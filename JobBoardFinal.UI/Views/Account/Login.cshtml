            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new JobBoardFinal.UI.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>*@
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
